{
    "name": "drupol/phptree",
    "type": "library",
    "description": "An implementation of tree data structure",
    "keywords": [
        "tree",
        "php",
        "data structure",
        "binary tree"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Pol Dellaiera",
            "email": "pol.dellaiera@protonmail.com"
        }
    ],
    "require": {
        "php": ">= 7.1"
    },
    "require-dev": {
        "drupol/launcher": "^2.2.2",
        "drupol/php-conventions": "^1.6.7",
        "drupol/phpmerkle": "^2.2",
        "friends-of-phpspec/phpspec-code-coverage": "^4.3.2",
        "graphp/graphviz": "^0.2",
        "infection/infection": "^0.13.6 || ^0.15.0",
        "phpbench/phpbench": "^0.16.10",
        "phpspec/phpspec": "^5.1.2 || ^6.1",
        "phptaskman/changelog": "^1.0"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "drupol\\phptree\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "drupol\\phptree\\tests\\": "tests/src/",
            "drupol\\phptree\\benchmarks\\": "benchmarks/",
            "spec\\drupol\\phptree\\": "spec/drupol/phptree/"
        }
    },
    "scripts": {
        "apigen": "./vendor/bin/apigen generate src --destination build/docs",
        "bench": "./vendor/bin/phpbench run --report=aggregate --store --precision=3",
        "grumphp": "./vendor/bin/grumphp run",
        "infection": "./vendor/bin/infection run -j 10",
        "scrutinizer": "./vendor/bin/ocular code-coverage:upload --format=php-clover build/logs/clover.xml"
    }
}
